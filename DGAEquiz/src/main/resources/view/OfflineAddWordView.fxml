<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="600.0" prefWidth="600.0" styleClass="tab-pane-addPane" stylesheets="@../css/addWordDesign.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dga.equiz.controller.OfflineAddWordController">
   <children>
      <VBox fx:id="vBox" alignment="TOP_CENTER" layoutX="4.0" layoutY="36.0" prefHeight="549.0" prefWidth="613.0" spacing="30.0" styleClass="scroll-pane-addScrollPane" stylesheets="@../css/addWordDesign.css">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="wordText" prefHeight="57.0" prefWidth="580.0" promptText="Word" styleClass="text-area-taPronounceDescription">
               <font>
                  <Font size="25.0" />
               </font>
            </TextField>
            <TextArea fx:id="taPronounce" prefHeight="74.0" prefWidth="593.0" promptText="Pronounce" styleClass="text-area-taPronounceDescription" />
            <TextArea fx:id="taDescription" prefHeight="201.0" prefWidth="570.0" promptText="Description" styleClass="text-area-taPronounceDescription" />
            <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#onClickAdd" styleClass="button-confirm" text="Confirm">
               <font>
                  <Font size="18.0" />
               </font></Button>
         </children>
      </VBox>
      <Button fx:id="btnClose" layoutX="573.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClickClose" prefHeight="24.0" prefWidth="10.0" styleClass="button-out" stylesheets="@../css/addWordDesign.css" textFill="RED">
         <graphic>
            <FontIcon iconColor="WHITE" iconLiteral="fth-x" iconSize="14" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
