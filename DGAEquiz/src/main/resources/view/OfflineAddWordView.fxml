<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="599.0" styleClass="tab-pane-wordPane" stylesheets="@../css/wordDesign.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dga.equiz.controller.OfflineAddWordController">
   <children>
      <VBox fx:id="vBox" alignment="TOP_CENTER" layoutX="4.0" layoutY="36.0" spacing="1.0" styleClass="scroll-pane" stylesheets="@../css/wordDesign.css">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="20.0" top="10.0" />
         </padding>
         <children>
            <TextField fx:id="wordText" prefHeight="57.0" prefWidth="580.0" promptText="word">
               <font>
                  <Font size="25.0" />
               </font>
            </TextField>
            <TextField fx:id="pronounceText" prefHeight="125.0" prefWidth="578.0" promptText="pronounce">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <TextField fx:id="descriptionText" prefHeight="131.0" prefWidth="580.0" promptText="description">
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
         </children>
      </VBox>
      <Button fx:id="btnClose" layoutX="577.0" layoutY="2.0" mnemonicParsing="false" onAction="#onClickClose" prefHeight="24.0" prefWidth="10.0" styleClass="button-close" stylesheets="@../css/applicationDesign.css" textFill="RED">
         <graphic>
            <FontIcon iconLiteral="fth-x" iconSize="10" />
         </graphic>
      </Button>
      <Button fx:id="btnConfirm" layoutX="279.0" layoutY="439.0" mnemonicParsing="false" onAction="#onClickAdd" text="Confirm" />
   </children>
</AnchorPane>
