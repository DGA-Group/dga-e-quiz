<AnchorPane prefHeight="600.0" prefWidth="600.0" styleClass="tab-pane-addPane" stylesheets="@../css/addWordDesign.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dga.equiz.controller.OfflineChangeWordController">
   <VBox fx:id="vBox" layoutY="48.0" prefHeight="549.0" prefWidth="613.0" spacing="20.0" styleClass="scroll-pane-addScrollPane">
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <padding>
         <Insets left="10.0" right="10.0" top="10.0" />
      </padding>
      <Label fx:id="labelWord" styleClass="label-labelOfWord" text="Words">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextArea fx:id="textAreaPronounce" prefHeight="74.0" prefWidth="593.0" promptText="Pronounce" styleClass="text-area-taPronounceDescription" />
      <TextArea fx:id="textAreaDescription" prefHeight="181.0" prefWidth="572.0" promptText="Description" styleClass="text-area-taPronounceDescription" />
      <Button fx:id="btnConfirm" mnemonicParsing="false" onAction="#onClickConfirm" styleClass="button-confirm" text="Confirm">
         <font>
            <Font size="18.0" />
         </font>
      </Button>
   </VBox>
   <Button fx:id="btnClose" layoutX="569.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClickClose" prefHeight="24.0" prefWidth="10.0" styleClass="button-out" textFill="RED">
