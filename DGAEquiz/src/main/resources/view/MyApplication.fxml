<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<BorderPane prefHeight="480.0" prefWidth="854.0" styleClass="rounded-application" stylesheets="@../css/applicationDesign.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.dga.equiz.controller.MyApplicationController">
   <left>
      <VBox alignment="TOP_CENTER" prefHeight="480.0" prefWidth="206.0" styleClass="nav-pane" stylesheets="@../css/applicationDesign.css" BorderPane.alignment="CENTER">
         <children>
            <AnchorPane prefHeight="102.0" prefWidth="206.0">
               <children>
                  <ImageView fitHeight="76.0" fitWidth="140.0" layoutX="57.0" layoutY="13.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../image/logo.png" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <Button mnemonicParsing="false" onAction="#onClickSwitchToHome" prefHeight="26.0" prefWidth="206.0" styleClass="nav-btn" stylesheets="@../css/homeDesign.css" text="Home" textAlignment="CENTER">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="fth-home" />
               </graphic>
            </Button>
            <Button layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#onClickSwitchToDictionary" prefHeight="26.0" prefWidth="231.0" styleClass="nav-btn" stylesheets="@../css/homeDesign.css" text="Dictionary" textAlignment="CENTER">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="fth-book" />
               </graphic>
            </Button>
            <Button layoutX="10.0" layoutY="36.0" mnemonicParsing="false" onAction="#onClickSwitchToProfile" prefHeight="26.0" prefWidth="231.0" styleClass="nav-btn" stylesheets="@../css/homeDesign.css" text="Profile" textAlignment="CENTER">
               <graphic>
                  <FontIcon iconColor="WHITE" iconLiteral="fth-settings" />
               </graphic>
            </Button>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </VBox>
   </left>
   <center>
      <BorderPane prefHeight="200.0" prefWidth="379.0" BorderPane.alignment="CENTER">
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
               <center>
                  <AnchorPane fx:id="panelHolder" prefHeight="200.0" prefWidth="200.0" styleClass="content-pane" stylesheets="@../css/applicationDesign.css" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </center>
         <top>
            <HBox fx:id="hboxUpperBar" alignment="CENTER_RIGHT" prefHeight="39.0" prefWidth="648.0" spacing="5.0" styleClass="menu-pane" stylesheets="@../css/applicationDesign.css" BorderPane.alignment="CENTER">
               <children>
                  <Button fx:id="btnMinimize" mnemonicParsing="false" styleClass="button-minimize" stylesheets="@../css/applicationDesign.css">
                     <graphic>
                        <FontIcon iconLiteral="fth-minus" iconSize="10" />
                     </graphic>
                  </Button>
                  <Button fx:id="btnMaximize" mnemonicParsing="false" styleClass="button-maximize" stylesheets="@../css/applicationDesign.css">
                     <graphic>
                        <FontIcon iconLiteral="fth-square" iconSize="10" />
                     </graphic>
                  </Button>
                  <Button fx:id="btnClose" mnemonicParsing="false" prefHeight="24.0" prefWidth="10.0" styleClass="button-close" stylesheets="@../css/applicationDesign.css" textFill="RED">
                     <graphic>
                        <FontIcon iconLiteral="fth-x" iconSize="10" />
                     </graphic>
                  </Button>
               </children>
               <padding>
                  <Insets right="20.0" />
               </padding>
            </HBox>
         </top>
      </BorderPane>
   </center>
</BorderPane>
