            <Font size="16.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" prefHeight="115.0" prefWidth="501.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="720.0">
               <children>
                  <Button fx:id="btnChange" mnemonicParsing="false" onAction="#onClickChangeWord" prefHeight="33.0" prefWidth="56.0">
                     <graphic>
                        <FontIcon iconLiteral="fth-pen-tool" iconSize="20" />
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="BOTTOM_RIGHT" prefWidth="720.0">
               <children>
                  <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#onClickDelete" text="Delete" />
               </children>
            </HBox>
         </children>
      </HBox>
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
   <padding>
      <Insets bottom="10.0" left="20.0" top="10.0" />
   </padding>
</VBox>
